{
  "version": 2,
  "public": true,
  "redirects": [
    { "source": "/", "destination": "/chat.html", "permanent": false }
  ],
  "functions": {
    "api/**": {
      "runtime": "nodejs20.x"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ]
}
